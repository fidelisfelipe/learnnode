<html>
    <head>
        <meta charset="utf-8"><meta>
    </head>
    <body>
        <h1>Hello Node with NodeMon and Express Template</h1>
        <table id="livros">
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Ação</th>
            </tr>
            <tr id="livro_${livro.id}" for (livro in data.livros)>
                <td>${livro.id}</td>
                <td>${livro.titulo}</td>
                <td ><a href="/livros/${livro.id}">Editar</a></td>
                <td><a href="#" data-ref="${livro.id}" data-type="remocao">Remover</a></td>
            </tr>
        </table>

        <script src="/estatico/js/remove-livros.js">
        </script>
    </body>
</html>